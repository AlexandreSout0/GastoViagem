<?xml version="1.0" encoding="utf-8"?>


<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/edit_distance"
        android:inputType="numberDecimal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Distância" />

    <TextView
        android:layout_width="match_parent"
        android:gravity="center"
        android:layout_marginTop="2dp"
        android:layout_height="wrap_content"
        android:text="Total de Quilometros" />

    <EditText
        android:id="@+id/edit_price"
        android:inputType="numberDecimal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Preço" />

    <TextView
        android:layout_width="match_parent"
        android:gravity="center"
        android:layout_marginTop="2dp"
        android:layout_height="wrap_content"
        android:text="Preço por Litro" />

    <EditText
        android:id="@+id/edit_autonomy"
        android:inputType="numberDecimal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Autonomia" />

    <TextView
        android:layout_width="match_parent"
        android:layout_marginTop="2dp"
        android:gravity="center"
        android:layout_height="wrap_content"
        android:text="Km por Litro" />

    <TextView
        android:layout_width="match_parent"
        android:gravity="center"
        android:textSize="20sp"
        android:layout_marginTop="32dp"
        android:layout_height="wrap_content"
        android:text="Seu Gasto Total Sera: " />

    <TextView
        android:id="@+id/text_total_value"
        android:layout_width="match_parent"
        android:gravity="center"
        android:textSize="38sp"
        android:layout_marginTop="16dp"
        android:layout_height="wrap_content"
        android:textColor="#3F51B5"
        android:text="R$ 0" />

    <Button
        android:id="@+id/button_calculate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/teal_700"
        android:padding="20dp"
        android:layout_marginTop="32sp"
        android:text="Calcular"
        android:textSize="18sp" />
</LinearLayout>